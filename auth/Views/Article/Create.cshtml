@model auth.Models.Article

@{
    ViewBag.Title = "ساخت مقاله";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>ساخت مقاله</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="form-floating">
    <input type="text" name="title" class="form-control rounded-4" id="title" placeholder="">
    <label for="title"> عنوان</label>
    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
</div>
<div class="form-floating mt-4">
    <textarea type="text" name="description" class="form-control rounded-4" id="description" placeholder=""></textarea>
    <label for="description"> توضیحات</label>
    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
</div>

    <div class="form-group">
        <div class="mt-4">
            <button class="w-100 btn d-block btn-outline-primary w-100" type="submit">ایجاد</button>
        </div>
    </div>
</div>
}

<div class="mt-4">
    @Html.ActionLink("مشاهده مقالات", "Index")
</div>
