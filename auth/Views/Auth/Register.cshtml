
@{
    ViewBag.Title = "ثبت نام";
}


<main class="form-signin w-100 m-auto">


    @*@Html.BeginForm("Register", "Auth", FormMethod.Post)*@




    <h1 class="h3 mb-3 fw-normal">صفحه ثبت نام</h1>

    @using (Html.BeginForm())
    {
        <div class="form-floating">
            <input type="email" name="email" class="form-control" id="floatingInput" placeholder="name@example.com">
            <label for="floatingInput">آدرس ایمیل</label>
        </div>
        <div class="form-floating">
            <input type="password" name="password" class="form-control" id="password" placeholder="رمز عبور">
            <label for="password">رمز عبور</label>
        </div>

        <div class="form-floating">
            <input type="password" name="password_confirmation" class="form-control" id="password_confirmation" placeholder="تکرار رمز عبور">
            <label for="password_confirmation">تکرار رمز عبور</label>
        </div>


        <button class="w-100 btn btn-lg btn-primary" type="submit">ثبت نام</button>
    }

</main>

